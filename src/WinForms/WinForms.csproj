  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Core\Core.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Reference Include="System.Windows.Forms" />
  </ItemGroup>

  <ItemGroup>
    <Compile Update="OpenGlForm.cs">
      <SubType>Form</SubType>
    </Compile>
  </ItemGroup>

</Project>
